<resources>
    <!-- Base application theme. -->
    <style name="Theme.AplikaceProChronickéPacienty" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  Navigation bar  -->

    <style name="Navbar">

        <item name="android:background">@color/white</item>

    </style>

    <!--  Nastavení  -->

    <style name="NastaveniCardBackground">

        <item name="android:background">@drawable/nastaveni_pozadi_element_white</item>

    </style>

    <style name="NastaveniTitle">

        <item name="android:textColor">@color/modro_fialova</item>

        <item name="android:tint">@color/modro_fialova</item>

    </style>

    <style name="NastaveniNadpisColor">

        <item name="android:drawableTint">@color/modro_fialova</item>

        <item name="android:textColor">@color/black</item>

    </style>

    <style name="NastaveniVaha">

        <item name="android:drawableTint">@color/neon_fialova</item>

        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NastaveniTextColor">

        <item name="android:textColor">@color/black</item>

    </style>

    <style name="NastaveniDescriptionColor">

        <item name="android:textColorHint">@color/tmave_seda</item>

        <item name="android:textColor">@color/black</item>

    </style>

    <style name="NastaveniBackground">

        <item name="android:background">@drawable/nastaveni_pozadi_white</item>

    </style>

    <style name="NastaveniLineColor">

        <item name="android:background">@color/seda</item>

    </style>

    <!--  Účet  -->

    <style name="UcetBackground">

        <item name="android:background">@color/white</item>

    </style>

    <style name="UcetPozadiBody">

        <item name="android:background">@drawable/ucet_pozadi_body_white</item>

    </style>

    <style name="UcetPozadiBodyZacatek">

        <item name="android:background">@drawable/ucet_pozadi_table_zacatek_white</item>

    </style>

    <style name="UcetTableBody">

        <item name="android:background">@color/white</item>

    </style>

    <style name="UcetTableEnd">

        <item name="android:background">@drawable/ucet_pozadi_table_end_white</item>

    </style>

    <style name="UcetTableNastaveni">

        <item name="android:background">@drawable/ucet_pozadi_element_white</item>

        <item name="android:textColor">@color/black</item>

    </style>

    <style name="UcetTextColor">

        <item name="android:textColor">@color/black</item>

    </style>

    <!--  Chat  -->

    <style name="ChatBackground">

        <item name="android:background">@color/white</item>

    </style>

    <style name="ChatDesignInput">

        <item name="android:background">@drawable/chat_pozadi_kruh_white</item>

        <item name="android:textColor">@color/black</item>

        <item name="android:textColorHint">#cbcbcb</item>

    </style>

    <style name="ChatMessageUser">

        <item name="android:textColor">@color/white</item>

    </style>

    <style name="ChatMessageResponse">

        <item name="android:textColor">@color/black</item>

        <item name="android:background">@drawable/zprava_dorucena_white</item>

    </style>


<resources>
    <!-- Base application theme. -->
    <style name="Theme.AplikaceProChronickéPacienty" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  Navigation bar  -->

    <style name="Navbar">

        <item name="android:background">@color/black</item>

    </style>

    <!--  Nastavení  -->

    <style name="NastaveniCardBackground">

        <item name="android:background">@drawable/nastaveni_pozadi_element_dark</item>

    </style>

    <style name="NastaveniTitle">

        <item name="android:textColor">@color/neon_ruzova</item>

        <item name="android:tint">@color/neon_ruzova</item>

    </style>

    <style name="NastaveniNadpisColor">

        <item name="android:drawableTint">@color/neon_ruzova</item>

        <item name="android:textColor">@color/white</item>

    </style>

    <style name="NastaveniVaha">

        <item name="android:drawableTint">@color/neon_modra</item>

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NastaveniTextColor">

        <item name="android:textColor">@color/white</item>

    </style>

    <style name="NastaveniDescriptionColor">

        <item name="android:textColorHint">@color/seda</item>

        <item name="android:textColor">@color/white</item>

    </style>

    <style name="NastaveniBackground">

        <item name="android:background">@drawable/nastaveni_pozadi_dark</item>

    </style>

    <style name="NastaveniLineColor">

        <item name="android:background">#38393b</item>

    </style>

    <!--  Účet  -->

    <style name="UcetBackground">

        <item name="android:background">@color/black</item>

    </style>

    <style name="UcetPozadiBody">

        <item name="android:background">@drawable/ucet_pozadi_body_dark</item>

    </style>

    <style name="UcetPozadiBodyZacatek">

        <item name="android:background">@drawable/ucet_pozadi_table_zacatek_dark</item>

    </style>

    <style name="UcetTableBody">

        <item name="android:background">@color/black</item>

    </style>

    <style name="UcetTableEnd">

        <item name="android:background">@drawable/ucet_pozadi_table_end_dark</item>

    </style>

    <style name="UcetTableNastaveni">

        <item name="android:background">@drawable/ucet_pozadi_element_dark</item>

        <item name="android:textColor">@color/white</item>

    </style>

    <style name="UcetTextColor">

        <item name="android:textColor">@color/white</item>

    </style>

    <style name="UcetProfilePicture">

        <item name="android:background">@drawable/ucet_pozadi_top_dark</item>

    </style>

</resources>